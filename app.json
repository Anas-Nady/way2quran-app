{
  "expo": {
    "name": "الطريق إلي القرآن",
    "slug": "way2quran",
    "description": "استماع وتحميل تلاوات للقرآن الكريم من أنحاء العالم الإسلامي",
    "version": "1.0.2",
    "orientation": "default",
    "sdkVersion": "51.0.0",
    "icon": "./src/assets/images/ios-icon.png",
    "scheme": "way2quran",
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#fff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["audio"],
        "NSLocationWhenInUseUsageDescription": "We need your location to determine your city and country."
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.anasnady.way2quran"
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/android-icon.png",
        "backgroundColor": "#374151"
      },
      "package": "com.anasnady.way2quran",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "48a677c9-bb19-490e-b5a3-4aab62d7536b"
      }
    }
  }
}
